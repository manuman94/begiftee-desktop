<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeGiftee.Source.Pages.Register.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="Register"
               FontSize="Large"
               FontAttributes="Bold"/>

        <Entry Placeholder="Username" />
        <Entry Placeholder="Email address" />
        <Entry Placeholder="Password" IsPassword="True" />
        
        <HorizontalStackLayout Spacing="10">
            <CheckBox />
            <Label Text="I agree with Terms and Privacy Policy" VerticalOptions="Center" />
        </HorizontalStackLayout>
        
        <Button Text="Create my free account"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="5"/>

        <HorizontalStackLayout Spacing="0">
            <Button Text="Go back" TextColor="#4CAF50" BackgroundColor="Transparent" Clicked="OnGoBackButtonClicked" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>