<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:BeGiftee.Source.Views.Auth"
             x:Class="BeGiftee.MainPage">

    <Grid Padding="20" RowSpacing="10">
        <!-- Grid column definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column: Login Form  -->
        <views:LoginView />

        <!-- Right Column: Company Logo and Lorem Ipsum Text -->
        <VerticalStackLayout Grid.Column="1" Spacing="20" Padding="20" HorizontalOptions="Start" MaximumWidthRequest="800">
            <Image Source="Resources\Images\logos\logo_white.png" HorizontalOptions="Start" MaximumHeightRequest="100"/>
            <Label Text="Welcome to BeGiftee Desktop! Begiftee Desktop is a desktop application designed to simplify gift-giving by allowing users to create personalized wish lists. Family and friends can easily view these lists, ensuring they always give the perfect gift."/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
