<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeGiftee.Source.Pages.Auth.ForgotPassword.ForgotPasswordPage"
             Title="ForgotPassword">
    <VerticalStackLayout Spacing="25" Padding="30" MaximumWidthRequest="500">
        <Label Text="Recover password"
           FontSize="Large"
           FontAttributes="Bold"/>
        <Entry x:Name="email" Placeholder="Email address" />
        <Button Text="Send recovery email"
                Clicked="OnRecoverButtonClicked"/>

        <HorizontalStackLayout Spacing="0">
            <Button Text="Go back" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" BackgroundColor="Transparent" Clicked="OnGoBackButtonClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>